<!-- Modal Register-->
<div class="modal fade" id="register" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Register</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        <!--Formulario-->
        <form action="/register" method="post" id="register">
          <div class="form-group">
            <label for="inputName">Nombre Completo</label>
            <input type="text" class="form-control" id="nombre" name="nombre"placeholder="Juan Sanchez Ortega" >
          </div>
          <div class="form-group">
            <label for="inputID">Cedula</label>
            <input type="text" class="form-control" id="id" name="id"placeholder="1045945834">
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="inputEmail4">Email</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="correo@correo.com" aria-describedby="emailHelp">
            </div>
            <div class="form-group col-md-6">
              <label for="inputPassword4">Contrase√±a</label>
              <input type="password" class="form-control" id="clave" name="clave" placeholder="Password">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-4">
              <label for="inputStat">Departamento</label>
              <select id="departamento" class="form-control" onChange="ciudades()" name="departamento">
                  <ul class="people_list">
                    {{#each departamentos}}
                      <option selected>{{this}}</option>
                    {{/each}}
                  </ul>
              </select>
            </div>
            <div class="form-group col-md-4">
              <label for="inputStat">Municipio</label>
              <select id="ciudad" class="form-control" name="ciudad">\
              </select>
            </div>
          </div>
          <div class="form-group">
            <label for="inputPhone">Codigo Postal</label>
            <input type="text" class="form-control" id="codigo" name="codigo"placeholder="151420">
          </div>
          <div class="form-group">
            <label for="inputAddress">Direccion</label>
            <input type="text" class="form-control" id="direccion" name="direccion" placeholder="1234 Main St">
          </div>
          <div class="form-group">
            <label for="inputPhone">Celular</label>
            <input type="text" class="form-control" id="telefono" name="telefono" placeholder="3219600394">
          </div>


          <button  class="btn btn-primary" type="submit" id="submitReg" name="submitReg">Regsitrarse</button>
        </form>
      </div>
    </div>

  </div>
</div>

